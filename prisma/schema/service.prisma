model Service {
    id String @id @default(uuid())

    name      String
    billType  String
    price     Float
    adults    Int
    minDaily  Int
    minNotice Int

    published    Boolean @default(false)
    onlineSale   Boolean @default(false)
    panelSale    Boolean @default(false)
    seasonalSale Boolean @default(false)

    seasonStart DateTime
    seasonEnd   DateTime
    hosting     Json?
    nights      Json?

    description String  @db.Text
    included    String  @db.Text
    notes       String  @db.Text
    videoUrl    String?

    medias       ServiceMedia[]
    reservations ReservationService[]

    categoryId String?
    category   ServiceCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("services")
}

model ServiceCategory {
    id String @id @default(uuid())

    name     String
    services Service[]

    @@map("service_categories")
}

model ServiceMedia {
    id    String @id @default(uuid())
    order Int?   @default(0)

    serviceId String  @map("serviceId")
    sevice    Service @relation(fields: [serviceId], references: [id])
    mediaId   String
    media     Media   @relation(fields: [mediaId], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("service_medias")
}
