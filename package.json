        "@types/multer": "^1.4.12",
        "@types/node": "^22.10.7",
        "@types/supertest": "^6.0.2",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.2",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^15.14.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "prettier": "^3.4.2",
        "prisma": "^6.4.1",
        "prisma-json-types-generator": "^3.2.2",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
